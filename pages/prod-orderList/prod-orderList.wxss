/* pages/prod-promote/prod-promote.wxss */

page {
  background: #f4f4f4;
}

/* 头部菜单 */

.order-tit {
  z-index: 999;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #f4f4f4;
  white-space: nowrap;
  margin-top: 88rpx;
}

.order-tit text {
  display: inline-block;
  font-size: 28rpx;
  color: 999;
  width: 100rpx;
  text-align: center;
}

.order-tit text.on {
  border-bottom: 4rpx solid #eb2444;
  color: #eb2444;
}

/*  end 头部菜单 */

.btn-wrap{
  height:80rpx;
  position: fixed;
  width: 100%;
  bottom: 0;
}
.btn-wrap .cancel{
  width: 50%;
  text-align: center;
  color: #000;
  font-size: 28rpx;
  line-height: 80rpx;
  background: #fff;
  display: inline-block;
}
.btn-wrap .sure{
  width: 50%;
  text-align: center;
  color: #000;
  font-size: 28rpx;
  line-height: 80rpx;
  background: #EB5412;
  display: inline-block;
  color:#fff;
}
.pop-wrap{
  height: 560rpx;
  overflow-y: scroll;
  margin-bottom: 100rpx;
}
.contain-wrap{
  width: 690rpx;
  margin: 30rpx auto;
}
.contain-wrap.first{
  margin-top: 118rpx;
}
.contain-wrap .title{
  font-size: 32rpx;
  font-weight: 600;
  color: #2F2F2F;
}
.tags-wrap{
  display:flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.tags-wrap text{
  height: 68rpx;
  background: #F4F4F4;
  border-radius: 8rpx;
  color: #2F2F2F;
  text-align: center;
  display: inline-block;
  line-height: 68rpx;
  margin-top: 20rpx;
  padding: 0 20rpx;
  margin-right: 20px;
}
.tags-wrap text.active{
  color: #ffffff;
  background: #EB5412;
}

/* 搜索栏 */

.search-bar {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  color: #777;
  background: #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.07);
  z-index: 200;
}

.search-bar .search-box {
  position: relative;
  height: 60rpx;
  background: #f7f7f7;
  z-index: 999;
  width: 80%;
  margin-left: 70rpx;
  border-radius: 50rpx;
  margin: 20rpx 0 20rpx 20rpx;
}

.sear-input {
  height: 60rpx;
  border-radius: 50rpx;
  border: 0;
  margin: 0 30rpx 0 64rpx;
  line-height: 48rpx;
  vertical-align: top;
  background: #f7f7f7;
  font-size: 28rpx;
}

.search-bar .search-hint {
  font-size: 28rpx;
  position: absolute;
  right: 30rpx;
  top: 31rpx;
  color: #393939;
}

.search-bar .search-box .search-img {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 20rpx;
  top: 14rpx;
  display: block;
}
.pro-item-wrap{
  margin-top:20rpx;
  background:#fff;
  padding: 30rpx;
}
.line{
  margin-top:20rpx;
  color:#000;
}
.flex-bweeten{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.goods-wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.line-line{
  height:2rpx;
  background: #dbdbdb;
  margin-bottom: 20rpx;
}
.goods-wrap .image-wrap{
  width:180rpx;
  height:180rpx;
  border-radius:10rpx;
}
.goods-wrap .image-wrap image{
  width:100%;
  height:100%;
  border-radius:10rpx;
}
.prod-info-wrap{
  width:480rpx;
}
.yongjin, .goods-name{
  margin-bottom: 12rpx;
}
.prod-info-wrap .flex-bweeten{
  margin-bottom: 12rpx;
}
.line{
  margin-bottom: 20rpx;
}

.flex-bweeten .right{
  display:flex;
  align-items: center;
}
.flex-bweeten .right image{
  width: 30rpx;
  height: 18rpx;
  display:inline-block;
}
.store-name-wrap .left{
  color:#000;
}
.store-name-wrap .right{
  color: #EB5412;
}
.store-name-wrap .left image{
  display:inline-block;
  width:24rpx;
  height:24rpx;
}

.empty-list {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin: 100rpx 0;
}
