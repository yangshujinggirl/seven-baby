/* pages/prod-promote/prod-promote.wxss */

page {
  background: #f4f4f4;
}
.btn-wrap{
  height:80rpx;
  position: fixed;
  width: 100%;
  bottom: 0;
}
.btn-wrap .cancel{
  width: 50%;
  text-align: center;
  color: #000;
  font-size: 28rpx;
  line-height: 80rpx;
  background: #fff;
  display: inline-block;
}
.btn-wrap .sure{
  width: 50%;
  text-align: center;
  color: #000;
  font-size: 28rpx;
  line-height: 80rpx;
  background: #EB5412;
  display: inline-block;
  color:#fff;
}
.pop-wrap{
  height: 760rpx;
  overflow-y: scroll;
  margin-bottom: 100rpx;
}
.contain-wrap{
  width: 690rpx;
  margin: 30rpx auto;
}
.contain-wrap.first{
  margin-top: 118rpx;
}
.contain-wrap .title{
  font-size: 32rpx;
  font-weight: 600;
  color: #2F2F2F;
}
.tags-wrap{
  display:flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.tags-wrap text{
  height: 68rpx;
  background: #F4F4F4;
  border-radius: 8rpx;
  color: #2F2F2F;
  text-align: center;
  display: inline-block;
  line-height: 68rpx;
  margin-top: 20rpx;
  padding: 0 20rpx;
  margin-right: 20px;
}
.tags-wrap text.active{
  color: #ffffff;
  background: #EB5412;
}

/* 搜索栏 */

.search-bar {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  color: #777;
  background: #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.07);
  z-index: 200;
}

.search-bar .search-box {
  position: relative;
  height: 60rpx;
  background: #f7f7f7;
  z-index: 999;
  width: 80%;
  margin-left: 70rpx;
  border-radius: 50rpx;
  margin: 20rpx 0 20rpx 20rpx;
}

.sear-input {
  height: 60rpx;
  border-radius: 50rpx;
  border: 0;
  margin: 0 30rpx 0 64rpx;
  line-height: 48rpx;
  vertical-align: top;
  background: #f7f7f7;
  font-size: 28rpx;
}

.search-bar .search-hint {
  font-size: 28rpx;
  position: absolute;
  right: 30rpx;
  top: 31rpx;
  color: #393939;
}

.search-bar .search-box .search-img {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 20rpx;
  top: 14rpx;
  display: block;
}

.banner-wrap{
  height: 330rpx;
  line-height: 0;
  margin-top: 100rpx;
}
.banner-wrap image{
  width: 100%;
  height: 100%;
}
.pro-item-wrap{
  width: 710rpx;
  height: 240rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  margin: 16rpx auto 0 auto;
  padding: 10rpx 20rpx 10rpx 10rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.pro-item-wrap .left{
  width: 220rpx;
  height:220rpx;
  display: inline-block;
  light-height: 0;
}
.pro-item-wrap .left image{
  width: 100%;
  height:100%;
  border-radius: 10rpx;
}

.pro-item-wrap .right{
  width: 440rpx;
  display:inline-block;
  margin-left: 20rpx;
  height: 220rpx;
}
.right .title{
  width: 44orpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #000000;
  line-height: 40rpx;
  display: block;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.right .price-wrap{
  margin-top: 40rpx;
  display:flex;
  justify-content: space-between;
}
.singal-price{
  font-size: 24rpx;
  color: #4A4A4A;
  line-height: 34rpx;
  text-decoration: line-through;
}
.price{
  color: #EB5412;
}
.price .symbol{
  font-size: 24rpx;
}
.big-num{
  font-size: 36rpx;
}
.small-num{
  font-size: 24rpx;
}
.promote-wrap{
  margin-top: 12rpx;
  display:flex;
  justify-content: space-between;
}
.maoli{
  font-size:24rpx;
  color: #4A4A4A;
  line-height: 60rpx;
}
.promote-btn{
  background: #EB5412;
  color: #fff;
  margin:0;
}
.empty-list {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin: 100rpx 0;
}
