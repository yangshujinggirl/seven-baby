.my-menu {
  /* width: 100%; */
  background-color: #fff;
  margin-top:20rpx;
}


.my-menu .memu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  border-bottom: 2rpx solid #f7f7f7;
  padding:0 30rpx;
  display: flex;
  justify-content: space-between;
}
.info-rf {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 28rpx;
  color: #3F3F3F;
}
button.getphone {
  border: none;
  font-size: 28rpx;
  color: #3F3F3F;
  padding: 0;
  margin:0;
  background:#fff;
}
button::after {
  border: none;
  color: #3F3F3F;
}
.my-menu .memu-item .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}
.avatar image {
  width: 100%;
  height: 100%;
}

.my-menu .memu-item:nth-child(1) {
  border-top: 2rpx solid #f7f7f7;
}

.my-menu .memu-item:last-child {
  border-bottom: none;
}

.my-menu .memu-item text {
  font-size: 28rpx;
}
.my-menu .memu-item .i-name{
  display: flex;
  align-items: center;
}

.arrowhead {
  width: 15rpx;
  height: 15rpx;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  transform: rotate(45deg);
  margin-left: 10rpx;
}
.item-wrap {
  width: 80%;
  margin: 40rpx auto;
}
.item-wrap input {
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #e4e4e4;
  padding: 0 0 0 18rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 12rpx;
}